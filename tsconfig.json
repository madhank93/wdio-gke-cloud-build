{
  "compilerOptions": {
    "lib": ["ES2020"],
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/mocha-framework",
      "expect-webdriverio"
    ],
    "moduleResolution": "node",
    "target": "es2019",
    "module": "commonjs",
    "baseUrl": ".",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "noImplicitThis": true,
    "strict": true
  },
  "exclude": ["./node_modules"],
  "include": ["./*.ts", "./test/**/*.ts"],
  "compileOnSave": true
}
